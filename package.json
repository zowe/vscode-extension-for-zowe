          "group": "inline"
        },
        {
          "when": "viewItem == ds",
          "command": "zowe.safeSave",
          "group": "inline"
        },
        {
          "when": "viewItem == ds",
          "command": "zowe.deleteDataset"
        },
        {
          "when": "viewItem == ds",
          "command": "zowe.submitMember"
        },
        {
          "when": "viewItem == ds",
          "command": "zowe.addFavorite"
        },
        {
