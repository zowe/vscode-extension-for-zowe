        "Zowe-Temp-Folder-Location": {
          "default": {
            "folderPath": ""
          },
          "description": "Path to temporary folder location",
          "scope": "window"
        },
        "Zowe-USS-Persistent-Favorites": {
          "default": {
            "persistence": true,
            "favorites": []
          },
          "description": "Toggle is favorite files exist locally",
          "scope": "window"
        }
      }
    }
