          "group": "navigation"
        },
        {
          "when": "viewItem == member",
          "command": "zowe.refreshNode",
          "group": "inline"
        },
        {
          "when": "viewItem == member",
          "command": "zowe.safeSave",
          "group": "inline"
        },
        {
          "when": "viewItem == member",
