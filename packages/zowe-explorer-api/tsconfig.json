{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node"],
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "newLine": "lf",
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/log4jsconfig.json"],
  "exclude": ["lib", "node_modules"]
}
